{
  "name": "MyFirstSapCapProj-1",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/audit-logging": "^1.1.1",
    "@sap/cds": "^9",
    "axios": "^1.13.1",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2.0.4",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "cds-swagger-ui-express": "^0.10.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "kill_port": "kill -9 $(lsof -t -i:4004)",
    "watch-front1": "cds watch --open front1/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy MyFirstSapCapProj-1 --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-project1": "cds watch --open project1/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/front1",
    "app/project1"
  ]
}
